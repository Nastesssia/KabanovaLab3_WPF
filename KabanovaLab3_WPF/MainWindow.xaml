<Window x:Class="KabanovaLab3_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KabanovaLab3_WPF"
        mc:Ignorable="d"
        Title="Лабораторная №1+3" Height="350" Width="300">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" Background="Transparent">
            <Label Content="Введите количество минут" Background="Beige" FontStyle="Italic"/>
            <TextBox x:Name="MinText" Background="Bisque"></TextBox>
            <Label Content="Введите количество секунд" Background="Beige" FontStyle="Italic"/>
            <TextBox x:Name="SecText" Background="Bisque"></TextBox>
            <Label Content="Введите скорость объекта в м/с " Background="Beige" FontStyle="Italic"/>
            <TextBox x:Name="SpeedText" Background="Bisque"></TextBox>
            <Button Content="Общее количество секунд" Margin="10" Background="Wheat" Click="Button_Click"/>
            <TextBlock x:Name="Result" Background="Bisque"></TextBlock>
            <Button Content="Расстояние, пройденное объектом" Margin="10" Background="Wheat" Click="Button_Click2"/>
            <TextBlock x:Name="Result2" Background="Bisque"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
